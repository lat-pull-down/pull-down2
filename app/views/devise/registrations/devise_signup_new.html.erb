 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

  <form class="email-siginup">
        <div class="u-form-group">
           <%= f.email_field :email, autofocus: true ,:class => "email"%>
        </div>


        <div class="u-form-group">
          <%= f.password_field :password, autocomplete: "off",:class => "password" %>
        </div>

<div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off" ,:class => "password" %>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off" ,:class => "password" %>
  </div>



        <div class="u-form-group">
          <%= f.submit "Signup" ,:class => "button"%>
        </div>
        <% if devise_mapping.rememberable? -%>
             <div class="u-form-group">
              <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
           </div>
      <% end %>
        <div class="u-form-group">
          <a href="#" class="forgot-password">Forgot password?</a>
        </div>
      </form>
    <% end %>
