
<!DOCTYPE html>
<html lang="ja">
<head>
	<meta charset="utf-8">
	<title>Melodic</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
</head>
  <body>
	<header>
		<div class="menu">
				<ul class="menu1">
				<li>
					<%= link_to new_post_path do%><i class="fa fa-newspaper-o fa-lg" aria-hidden="true">New post</i>
					<% end %>
				</li>
				</ul>
				<ul class="menu2">
				<li>
					<%= link_to posts_path do%>
					<i class="fa fa-home fa-lg" aria-hidden="true">Home</i>
					<% end %>
				</li>
				</ul>
				<ul class="menu3">
					<li><% if user_signed_in? %>
						<%= link_to users_show_path(current_user) do %>
						<i class="fa fa-font-awesome fa-lg"	 aria-hidden="true">Mypage</i>
						<% end %>
						<% else %>
						<%= link_to new_user_registration_path do%>
						<i class="fa fa-sign-in fa-lg" aria-hidden="true">Signup</i>

						<% end %>
						<% end %>
					</li>
				</ul>
				<ul class="menu4">
					<li><% if user_signed_in? %>
						<%= link_to edit_user_registration_path do %>
						<i class="fa fa-user-md fa-lg" aria-hidden="true">Edit profile</i>
						<% end %>
						<% else %>
						<%= %>
						<% end %>
					</li>
				</ul>
				<ul class="menu5">
					<li><% if user_signed_in? %>
						<%= link_to destroy_user_session_path, method: :delete do %>
						<i class="fa fa-sign-out fa-lg"aria-hidden="true">Logout</i>
						<% end %>
						<% else%>
						<%= link_to user_omniauth_authorize_path(:twitter) do %><i class="fa fa-twitter fa-lg" aria-hidden="true">twitter_in</i>
						<% end %>
 						<%#= link_to "Login", new_user_session_path %>
						<% end %>	
						</li>
				</ul>
				<ul class="menu6">
					<p><% if user_signed_in? %>
						<strong><%= current_user.email %></strong><br>
						<% end %>
					</p>
				</ul>
			</div>
	</header>
